<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lineWidthDialogGridLayout"
    android:columnCount="1"
    android:orientation="vertical"
    android:useDefaultMargins="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/lineWidthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:text="@string/button_set_line_width"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_imageview_height"
        android:id="@+id/widthImageView"
        android:layout_gravity="fill_horizontal"
        android:contentDescription="@string/line_imageview_description"
        android:layout_row="1"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widthSeekBar"
        android:layout_gravity="fill_horizontal"
        android:max="50"
        android:layout_row="2"/>
</GridLayout>